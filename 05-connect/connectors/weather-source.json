{
  "name": "weather-api-source",
  "config": {
    "connector.class": "com.github.castorm.kafka.connect.http.HttpSourceConnector",
    "tasks.max": "1",
    "http.request.url": "https://api.open-meteo.com/v1/forecast?latitude=43.65&longitude=-79.38&current=temperature_2m,relative_humidity_2m,wind_speed_10m,pressure_msl&timezone=America/Toronto",
    "http.request.method": "GET",
    "http.timer.interval.millis": "60000",
    "kafka.topic": "weather-data",
    "http.response.record.parser": "com.github.castorm.kafka.connect.http.response.spi.KvHttpResponseParser",
    "value.converter": "org.apache.kafka.connect.json.JsonConverter",
    "value.converter.schemas.enable": "false"
  }
}
